<%= render 'navigation', active: 'history' %>

<div class="container">
  <h2>Currently Playing</h2>
  <div class="panel panel-default history-item">
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-8">
          <h4>Harvest of Sorrow</h4>
          <div class="row">
            <div class="col-md-4">
              <strong>By:</strong>
              Bling Guardian
            </div>
            <div class="col-md-4">
              <strong>On:</strong>
              A Night At The Opera
            </div>
            <div class="col-md-4">
              <strong>Uploader:</strong>
              DickBags
            </div>
          </div>
        </div>
        <div class="col-sm-4 text-right">
          <button class="btn btn-primary">Download Track</button>
          <button class="btn btn-primary">Download Folder</button>
        </div>
      </div>
    </div>
  </div>

  <hr />

  <h2>Playback History</h2>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">History Search</h3>
    </div>
    <div class="panel-body">
      <div class="row">

        <form class="form-inline">
          <div class="col-sm-3">Showing History</div>
          <div class="col-sm-9 text-right">
            <div class="form-group">
              <%= render 'datetimepicker', id: 'startDate', name: 'From' %>
            </div>
            <div class="form-group">
              <%= render 'datetimepicker', id: 'endDate', name: 'To' %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <p data-bind="visible: history() != null">
    <span class="glyphicon glyphicon-refresh"></span>
    Loading History
  </p>
  <p data-bind="visible: history() && history().length == 0">
    No playback history for this time frame
  </p>

  <div data-bind="visible: history(), for-each: history">
    <div class="panel panel-default history-item">
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-8">
            <h4>
              <span>Bling Guardian</span> /
              <span>A Night At The Opera</span> &ndash;
              <span>Harvest of Sorrow</span>
              <span class="label label-default">4:39</span>
              <span class="label label-default">DickBags</span>
            </h4>
            <p>
              <span>12:03pm Nov 19, 2016</span>
              <span class="text-muted">
                (<span>10 min ago</span>)
              </span>
            </p>
          </div>
          <div class="col-sm-4 text-right">
            <a class="btn btn-primary" href="qqq">Download Track</a>
            <a class="btn btn-primary" href="qqq">Download Folder</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% javascript_tag 'ko_index' %>